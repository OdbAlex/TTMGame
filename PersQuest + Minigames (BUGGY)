        async function analyzeEmpathy() {
            const input = document.getElementById('empathyInput').value.trim();
            const feedback = document.getElementById('empathyFeedback');
            const analyzeBtn = event.target;
            
            if (!input) {
                alert('Bitte schreibe eine Nachricht!');
                return;
            }
            
            // Zeige "Denkt nach..." Zustand
            analyzeBtn.disabled = true;
            analyzeBtn.textContent = 'ü§î KI analysiert deine Nachricht...';
            
            feedback.innerHTML = `
                <div style="text-align: center; padding: 30px;">
                    <div style="font-size: 48px; margin-bottom: 15px;">ü§î</div>
                    <div style="font-size: 18px; font-weight: 600; color: #667eea;">KI analysiert deine Nachricht...</div>
                    <div style="font-size: 14px; color: #8e8e8e; margin-top: 10px;">Dies kann einen Moment dauern</div>
                    <div style="margin-top: 20px;">
                        <div style="width: 200px; height: 4px; background: #e0e0e0; border-radius: 2px; margin: 0 auto; overflow: hidden;">
                            <div style="width: 30%; height: 100%; background: linear-gradient(90deg, #667eea, #764ba2); animation: loading 1.5s infinite;"></div>
                        </div>
                    </div>
                </div>
            `;
            feedback.style.display = 'block';
            
            try {
                // Bereite den Kontext f√ºr die KI vor
                const context = `Du bist eine Expertin f√ºr Perspektiv√ºbernahme und Einf√ºhlungsverm√∂gen. 

KONTEXT: In einer Lernanwendung √ºber soziale Dynamiken haben Nutzer die Geschichte von Mia verfolgt - einer Studentin, die nach √∂ffentlicher Kritik (Budget-K√ºrzung vor dem ganzen Team in Tag 3) zunehmend unter Scham und sozialer Angst leidet. Sie f√ºhlt sich als Person bewertet, nicht nur ihre Arbeit, und zieht sich immer mehr zur√ºck.

Jetzt ist der Nutzer in Mias Rolle: Das Team chattet euphorisch √ºber den Erfolg des Projekts. Mia f√ºhlt sich wie eine Belastung nach ihrem "Fehler" und ist hin- und hergerissen zwischen dem Wunsch dabei zu sein und der Angst, erneut zu versagen oder das Team runterzuziehen.

NUTZER SCHRIEB ALS MIA:
"${input}"

AUFGABE: Analysiere diese Nachricht auf Einf√ºhlungsverm√∂gen und Authentizit√§t f√ºr Mias Situation. Gib konstruktives, ermutigendes Feedback in 3-4 S√§tzen. Strukturiere so:

1. Beginne mit einer positiven Beobachtung (Was gut gelungen ist)
2. Erkl√§re WAS authentisch/weniger authentisch an der Nachricht ist f√ºr Mias Situation
3. Gib einen konkreten, hilfreichen Hinweis zur Verbesserung (falls n√∂tig)
4. Schlie√üe ermutigend ab

Sei warmherzig und lehrreich, aber ehrlich. Keine Auflistungen oder Struktur-Marker. Nat√ºrlicher Flie√ütext.`;

                // API Call (Du musst hier deinen API Key verwenden)
                const API_KEY = 'YOUR_ANTHROPIC_API_KEY'; // ‚ö†Ô∏è WICHTIG: Ersetze dies mit deinem echten Key
                
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': API_KEY,
                        'anthropic-version': '2023-06-01'
                    },
                    body: JSON.stringify({
                        model: 'claude-3-5-sonnet-20241022',
                        max_tokens: 1024,
                        messages: [{
                            role: 'user',
                            content: context
                        }]
                    })
                });
                
                if (!response.ok) {
                    throw new Error('API-Fehler');
                }
                
                const data = await response.json();
                const aiFeedback = data.content[0].text;
                
                // Zeige das KI-Feedback
                feedback.innerHTML = `
                    <div style="font-size: 20px; font-weight: 700; margin-bottom: 15px; color: #667eea;">ü§ñ KI-Analyse</div>
                    <div style="background: white; padding: 20px; border-radius: 8px; margin-bottom: 15px; line-height: 1.8; color: #424242;">
                        ${aiFeedback}
                    </div>
                    <div style="background: #E3F2FD; padding: 15px; border-radius: 8px; color: #424242;">
                        <div style="font-weight: 600; margin-bottom: 8px; color: #1976D2;">üí≠ Eine m√∂gliche authentische Antwort von Mia:</div>
                        <div style="font-style: italic;">"Ich freue mich auch... auch wenn mir das alles gerade noch etwas √ºberw√§ltigend vorkommt. Aber ich versuche mein Bestes zu geben ü§û"</div>
                        <div style="margin-top: 10px; font-size: 13px; color: #666;">
                            ‚Üí Zeigt Bem√ºhung und Hoffnung, gibt aber ehrlich zu, dass es schwer ist
                        </div>
                    </div>
                    <div style="text-align: center; margin-top: 20px;">
                        <button class="accuse-btn" onclick="location.reload()">üîÑ Nochmal spielen</button>
                    </div>
                `;
                
            } catch (error) {
                console.error('API Error:', error);
                // Fallback auf lokale Analyse wenn API nicht verf√ºgbar
                feedback.innerHTML = `
                    <div style="background: #FFF3E0; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                        <div style="font-weight: 600; color: #F57C00; margin-bottom: 10px;">‚ö†Ô∏è KI-Analyse vor√ºbergehend nicht verf√ºgbar</div>
                        <div style="color: #666;">Verwende die lokale Analyse:</div>
                    </div>
                    <div style="background: white; padding: 20px; border-radius: 8px; margin-bottom: 15px; line-height: 1.8; color: #424242;">
                        Deine Nachricht "${input}" zeigt ${input.length > 30 ? 'eine durchdachte' : 'eine kurze'} Reaktion auf die Teamsituation. 
                        ${input.toLowerCase().includes('aber') || input.toLowerCase().includes('auch wenn') || input.toLowerCase().includes('...') ? 
                            'Gut ist die Ambivalenz, die du zeigst - das ist authentisch f√ºr jemanden, der innerlich k√§mpft.' : 
                            '√úberlege, ob Mia in dieser Situation nicht auch Zweifel oder Unsicherheit zeigen w√ºrde.'}
                        ${input.toLowerCase().includes('freue') || input.toLowerCase().includes('dabei') ? 
                            'Die Hoffnung ist wichtig, um das Team nicht zu belasten.' : 
                            'Eine Prise Hoffnung k√∂nnte helfen, damit Mia sich nicht komplett zur√ºckzieht.'}
                    </div>
                    <div style="background: #E3F2FD; padding: 15px; border-radius: 8px; color: #424242;">
                        <div style="font-weight: 600; margin-bottom: 8px; color: #1976D2;">üí≠ Eine m√∂gliche authentische Antwort von Mia:</div>
                        <div style="font-style: italic;">"Ich freue mich auch... auch wenn mir das alles gerade noch etwas √ºberw√§ltigend vorkommt. Aber ich versuche mein Bestes zu geben ü§û"</div>
                    </div>
                    <div style="text-align: center; margin-top: 20px;">
                        <button class="accuse-btn" onclick="location.reload()">üîÑ Nochmal spielen</button>
                    </div>
                `;
            }
            
            analyzeBtn.disabled = false;
            analyzeBtn.textContent = 'Nachricht senden & auswerten';
            
            // Scroll to feedback
            feedback.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }


